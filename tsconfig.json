{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "@styles/*": [
        "styling/scss/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@stores/*": [
        "stores/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@webshop/*": [
        "pages/webshop/*"
      ],
      "@backoffice/*": [
        "pages/backoffice/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "twin.d.ts",
  ],
  "exclude": [
    "node_modules",
  ],
}